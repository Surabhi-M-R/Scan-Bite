<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ANUGYA - Detailed Analysis</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .detailed-analysis {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 30px;
            margin: 20px 0;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .analysis-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        .analysis-card {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            padding: 20px;
            transition: transform 0.3s ease;
        }
        .analysis-card:hover {
            transform: translateY(-5px);
        }
        .card-title {
            font-size: 1.2em;
            color: #fff;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .card-content {
            color: #e0e0e0;
            line-height: 1.6;
        }
        .nutrition-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
            margin-top: 15px;
        }
        .nutrition-item {
            background: rgba(255, 255, 255, 0.1);
            padding: 10px;
            border-radius: 10px;
            text-align: center;
        }
        .nutrition-value {
            font-size: 1.2em;
            font-weight: 600;
            color: #fff;
        }
        .nutrition-label {
            font-size: 0.9em;
            color: #e0e0e0;
        }
        .impact-list {
            list-style: none;
            padding: 0;
        }
        .impact-item {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px;
            padding: 10px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
        }
        .diet-tag {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.9em;
            margin: 5px;
            background: var(--gradient-primary);
        }
        .storage-info {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        .storage-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
        }
        .eco-badge {
            display: inline-block;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9em;
            margin: 5px;
            background: #00C851;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Detailed Analysis</h1>

        <div class="analysis-container">
            <div class="analysis-section">
                <h2 class="analysis-title">
                    <i class="fas fa-box"></i>
                    Product Information
                </h2>
                <div class="analysis-content">
                    <h3><%= analysis.productName %></h3>
                </div>
            </div>

            <div class="analysis-section">
                <h2 class="analysis-title">
                    <i class="fas fa-list"></i>
                    Key Ingredients
                </h2>
                <div class="analysis-content">
                    <ul class="ingredient-list">
                        <% analysis.keyIngredients.forEach(ingredient => { %>
                            <li class="ingredient-item">
                                <i class="fas fa-circle"></i>
                                <%= ingredient %>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>

            <div class="analysis-section">
                <h2 class="analysis-title">
                    <i class="fas fa-shield-alt"></i>
                    Safety Assessment
                </h2>
                <div class="analysis-content">
                    <p><%= analysis.safetyAssessment %></p>
                    <div class="rating-badge">
                        Safety Rating: <%= analysis.safetyRating.score %>/10
                    </div>
                    <p><%= analysis.safetyRating.explanation %></p>
                </div>
            </div>

            <% if (analysis.harmfulChemicals && analysis.harmfulChemicals.length > 0) { %>
                <div class="analysis-section">
                    <h2 class="analysis-title">
                        <i class="fas fa-exclamation-triangle"></i>
                        Harmful Chemicals
                    </h2>
                    <div class="analysis-content">
                        <ul class="ingredient-list">
                            <% analysis.harmfulChemicals.forEach(chemical => { %>
                                <li class="ingredient-item">
                                    <i class="fas fa-exclamation-circle"></i>
                                    <%= chemical %>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            <% } %>

            <% if (analysis.healthBenefits && analysis.healthBenefits.length > 0) { %>
                <div class="analysis-section">
                    <h2 class="analysis-title">
                        <i class="fas fa-heart"></i>
                        Health Benefits
                    </h2>
                    <div class="analysis-content">
                        <ul class="ingredient-list">
                            <% analysis.healthBenefits.forEach(benefit => { %>
                                <li class="ingredient-item">
                                    <i class="fas fa-check-circle"></i>
                                    <%= benefit %>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            <% } %>

            <div class="analysis-section">
                <h2 class="analysis-title">
                    <i class="fas fa-info-circle"></i>
                    Consumption Recommendations
                </h2>
                <div class="analysis-content">
                    <p><%= analysis.consumptionRecommendations %></p>
                </div>
            </div>

            <% if (analysis.alternativeProducts && analysis.alternativeProducts.length > 0) { %>
                <div class="analysis-section">
                    <h2 class="analysis-title">
                        <i class="fas fa-exchange-alt"></i>
                        Alternative Products
                    </h2>
                    <div class="analysis-content">
                        <ul class="ingredient-list">
                            <% analysis.alternativeProducts.forEach(alternative => { %>
                                <li class="ingredient-item">
                                    <i class="fas fa-arrow-right"></i>
                                    <%= alternative %>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            <% } %>
        </div>

        <div class="detailed-analysis">
            <h2 class="analysis-title">
                <i class="fas fa-chart-bar"></i>
                Detailed Analysis
            </h2>

            <div class="analysis-grid">
                <div class="analysis-card">
                    <h3 class="card-title">
                        <i class="fas fa-utensils"></i>
                        Nutritional Information
                    </h3>
                    <div class="card-content">
                        <div class="nutrition-grid">
                            <% Object.entries(detailedAnalysis.nutritionalInfo).forEach(([key, value]) => { %>
                                <div class="nutrition-item">
                                    <div class="nutrition-value"><%= value %></div>
                                    <div class="nutrition-label"><%= key %></div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <div class="analysis-card">
                    <h3 class="card-title">
                        <i class="fas fa-heartbeat"></i>
                        Health Impact
                    </h3>
                    <div class="card-content">
                        <ul class="impact-list">
                            <% Object.entries(detailedAnalysis.healthImpact).forEach(([key, value]) => { %>
                                <li class="impact-item">
                                    <i class="fas fa-circle"></i>
                                    <div>
                                        <strong><%= key %>:</strong>
                                        <%= value %>
                                    </div>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>

                <div class="analysis-card">
                    <h3 class="card-title">
                        <i class="fas fa-clipboard-list"></i>
                        Dietary Considerations
                    </h3>
                    <div class="card-content">
                        <% Object.entries(detailedAnalysis.dietaryConsiderations).forEach(([key, value]) => { %>
                            <div class="diet-tag"><%= key %></div>
                            <p><%= value %></p>
                        <% }); %>
                    </div>
                </div>

                <div class="analysis-card">
                    <h3 class="card-title">
                        <i class="fas fa-box-open"></i>
                        Storage and Handling
                    </h3>
                    <div class="card-content">
                        <div class="storage-info">
                            <% Object.entries(detailedAnalysis.storageAndHandling).forEach(([key, value]) => { %>
                                <div class="storage-item">
                                    <i class="fas fa-info-circle"></i>
                                    <div>
                                        <strong><%= key %>:</strong>
                                        <%= value %>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <div class="analysis-card">
                    <h3 class="card-title">
                        <i class="fas fa-leaf"></i>
                        Environmental Impact
                    </h3>
                    <div class="card-content">
                        <% Object.entries(detailedAnalysis.environmentalImpact).forEach(([key, value]) => { %>
                            <div class="eco-badge"><%= key %></div>
                            <p><%= value %></p>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>

        <div class="button-container">
            <a href="/" class="button">
                <i class="fas fa-home"></i>
                Back to Home
            </a>
            <a href="/upload" class="button">
                <i class="fas fa-camera"></i>
                Scan Another Product
            </a>
        </div>
    </div>
</body>
</html>