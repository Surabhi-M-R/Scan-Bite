<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ANUGYA - Analysis Results</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .analysis-container {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 30px;
            margin: 20px 0;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .analysis-section {
            margin-bottom: 25px;
        }
        .analysis-title {
            font-size: 1.2em;
            color: #fff;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .analysis-content {
            color: #e0e0e0;
            line-height: 1.6;
        }
        .ingredient-list {
            list-style: none;
            padding: 0;
        }
        .ingredient-item {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px;
            padding: 10px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
        }
        .rating-badge {
            background: var(--gradient-primary);
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: 600;
            color: white;
        }
        .warning-badge {
            background: #ff4444;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: 600;
            color: white;
        }
        .benefit-badge {
            background: #00C851;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: 600;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Analysis Results</h1>

        <div class="analysis-container">
            <div class="analysis-section">
                <h2 class="analysis-title">
                    <i class="fas fa-box"></i>
                    Product Information
                </h2>
                <div class="analysis-content">
                    <h3><%= analysis.productName %></h3>
                </div>
            </div>

            <div class="analysis-section">
                <h2 class="analysis-title">
                    <i class="fas fa-list"></i>
                    Key Ingredients
                </h2>
                <div class="analysis-content">
                    <ul class="ingredient-list">
                        <% analysis.keyIngredients.forEach(ingredient => { %>
                            <li class="ingredient-item">
                                <i class="fas fa-circle"></i>
                                <%= ingredient %>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>

            <div class="analysis-section">
                <h2 class="analysis-title">
                    <i class="fas fa-shield-alt"></i>
                    Safety Assessment
                </h2>
                <div class="analysis-content">
                    <p><%= analysis.safetyAssessment %></p>
                    <div class="rating-badge">
                        Safety Rating: <%= analysis.safetyRating.score %>/10
                    </div>
                    <p><%= analysis.safetyRating.explanation %></p>
                </div>
            </div>

            <% if (analysis.harmfulChemicals && analysis.harmfulChemicals.length > 0) { %>
                <div class="analysis-section">
                    <h2 class="analysis-title">
                        <i class="fas fa-exclamation-triangle"></i>
                        Harmful Chemicals
                    </h2>
                    <div class="analysis-content">
                        <ul class="ingredient-list">
                            <% analysis.harmfulChemicals.forEach(chemical => { %>
                                <li class="ingredient-item">
                                    <i class="fas fa-exclamation-circle"></i>
                                    <%= chemical %>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            <% } %>

            <% if (analysis.healthBenefits && analysis.healthBenefits.length > 0) { %>
                <div class="analysis-section">
                    <h2 class="analysis-title">
                        <i class="fas fa-heart"></i>
                        Health Benefits
                    </h2>
                    <div class="analysis-content">
                        <ul class="ingredient-list">
                            <% analysis.healthBenefits.forEach(benefit => { %>
                                <li class="ingredient-item">
                                    <i class="fas fa-check-circle"></i>
                                    <%= benefit %>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            <% } %>

            <div class="analysis-section">
                <h2 class="analysis-title">
                    <i class="fas fa-info-circle"></i>
                    Consumption Recommendations
                </h2>
                <div class="analysis-content">
                    <p><%= analysis.consumptionRecommendations %></p>
                </div>
            </div>

            <% if (analysis.alternativeProducts && analysis.alternativeProducts.length > 0) { %>
                <div class="analysis-section">
                    <h2 class="analysis-title">
                        <i class="fas fa-exchange-alt"></i>
                        Alternative Products
                    </h2>
                    <div class="analysis-content">
                        <ul class="ingredient-list">
                            <% analysis.alternativeProducts.forEach(alternative => { %>
                                <li class="ingredient-item">
                                    <i class="fas fa-arrow-right"></i>
                                    <%= alternative %>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            <% } %>
        </div>

        <div class="detailed-analysis">
            <h2 class="analysis-title">
                <i class="fas fa-chart-bar"></i>
                Detailed Analysis
            </h2>

            <div class="analysis-grid">
                <div class="analysis-card">
                    <h3 class="card-title">
                        <i class="fas fa-utensils"></i>
                        Nutritional Information
                    </h3>
                    <div class="card-content">
                        <div class="nutritional-info">
                            <% if (detailedAnalysis.nutritionalInfo) { %>
                                <div class="nutrition-item">
                                    <i class="fas fa-fire"></i>
                                    <div>
                                        <h4>Calories</h4>
                                        <p><%= detailedAnalysis.nutritionalInfo.calories %></p>
                                    </div>
                                </div>
                                <div class="nutrition-item">
                                    <i class="fas fa-drumstick-bite"></i>
                                    <div>
                                        <h4>Macronutrients</h4>
                                        <ul>
                                            <li>Protein: <%= detailedAnalysis.nutritionalInfo.macronutrients.protein %></li>
                                            <li>Carbs: <%= detailedAnalysis.nutritionalInfo.macronutrients.carbs %></li>
                                            <li>Fats: <%= detailedAnalysis.nutritionalInfo.macronutrients.fats %></li>
                                        </ul>
                                    </div>
                                </div>
                                <% if (detailedAnalysis.nutritionalInfo.vitamins && detailedAnalysis.nutritionalInfo.vitamins.length > 0) { %>
                                    <div class="nutrition-item">
                                        <i class="fas fa-pills"></i>
                                        <div>
                                            <h4>Vitamins</h4>
                                            <ul>
                                                <% detailedAnalysis.nutritionalInfo.vitamins.forEach(vitamin => { %>
                                                    <li><%= vitamin %></li>
                                                <% }); %>
                                            </ul>
                                        </div>
                                    </div>
                                <% } %>
                                <% if (detailedAnalysis.nutritionalInfo.minerals && detailedAnalysis.nutritionalInfo.minerals.length > 0) { %>
                                    <div class="nutrition-item">
                                        <i class="fas fa-gem"></i>
                                        <div>
                                            <h4>Minerals</h4>
                                            <ul>
                                                <% detailedAnalysis.nutritionalInfo.minerals.forEach(mineral => { %>
                                                    <li><%= mineral %></li>
                                                <% }); %>
                                            </ul>
                                        </div>
                                    </div>
                                <% } %>
                            <% } else { %>
                                <p class="no-info">Nutritional information not available</p>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="analysis-card">
                    <h3 class="card-title">
                        <i class="fas fa-heartbeat"></i>
                        Health Impact
                    </h3>
                    <div class="card-content">
                        <div class="health-impact">
                            <% if (detailedAnalysis.healthImpact) { %>
                                <div class="impact-item">
                                    <i class="fas fa-clock"></i>
                                    <div>
                                        <h4>Short Term Effects</h4>
                                        <p><%= detailedAnalysis.healthImpact.shortTerm %></p>
                                    </div>
                                </div>
                                <div class="impact-item">
                                    <i class="fas fa-calendar-alt"></i>
                                    <div>
                                        <h4>Long Term Effects</h4>
                                        <p><%= detailedAnalysis.healthImpact.longTerm %></p>
                                    </div>
                                </div>
                                <% if (detailedAnalysis.healthImpact.risks && detailedAnalysis.healthImpact.risks.length > 0) { %>
                                    <div class="impact-item">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        <div>
                                            <h4>Potential Risks</h4>
                                            <ul>
                                                <% detailedAnalysis.healthImpact.risks.forEach(risk => { %>
                                                    <li><%= risk %></li>
                                                <% }); %>
                                            </ul>
                                        </div>
                                    </div>
                                <% } %>
                            <% } else { %>
                                <p class="no-info">Health impact information not available</p>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="analysis-card">
                    <h3 class="card-title">
                        <i class="fas fa-clipboard-list"></i>
                        Dietary Considerations
                    </h3>
                    <div class="card-content">
                        <% Object.entries(detailedAnalysis.dietaryConsiderations).forEach(([key, value]) => { %>
                            <div class="diet-tag"><%= key %></div>
                            <p><%= value %></p>
                        <% }); %>
                    </div>
                </div>

                <div class="analysis-card">
                    <h3 class="card-title">
                        <i class="fas fa-box-open"></i>
                        Storage and Handling
                    </h3>
                    <div class="card-content">
                        <div class="storage-info">
                            <% if (detailedAnalysis.storage) { %>
                                <div class="storage-item">
                                    <i class="fas fa-info-circle"></i>
                                    <div>
                                        <h4>Storage Conditions</h4>
                                        <p><%= detailedAnalysis.storage.conditions %></p>
                                    </div>
                                </div>
                                <div class="storage-item">
                                    <i class="fas fa-clock"></i>
                                    <div>
                                        <h4>Shelf Life</h4>
                                        <p><%= detailedAnalysis.storage.shelfLife %></p>
                                    </div>
                                </div>
                                <% if (detailedAnalysis.storage.precautions && detailedAnalysis.storage.precautions.length > 0) { %>
                                    <div class="storage-item">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        <div>
                                            <h4>Precautions</h4>
                                            <ul>
                                                <% detailedAnalysis.storage.precautions.forEach(precaution => { %>
                                                    <li><%= precaution %></li>
                                                <% }); %>
                                            </ul>
                                        </div>
                                    </div>
                                <% } %>
                            <% } else { %>
                                <p class="no-info">Storage information not available</p>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="analysis-card">
                    <h3 class="card-title">
                        <i class="fas fa-leaf"></i>
                        Environmental Impact
                    </h3>
                    <div class="card-content">
                        <% Object.entries(detailedAnalysis.environmentalImpact).forEach(([key, value]) => { %>
                            <div class="eco-badge"><%= key %></div>
                            <p><%= value %></p>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>

        <div class="button-container">
            <a href="/" class="button">
                <i class="fas fa-home"></i>
                Back to Home
            </a>
            <a href="/upload" class="button">
                <i class="fas fa-camera"></i>
                Scan Another Product
            </a>
        </div>
    </div>
</body>
</html>